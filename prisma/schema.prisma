// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String
  password  String
  salt      String
  roleid    Int?
  role      Role?    @relation(fields: [roleid], references: [id])
  companyId Int?
  company   Company? @relation(fields: [companyId], references: [id], onDelete: Cascade)
}

model Quota {
  id      Int       @id @default(autoincrement())
  name    String    @unique
  price   Float
  tokens  Int
  Company Company[]
}

model Role {
  id           Int    @id @default(autoincrement())
  name         String
  capabilities Json
  User         User[]
}

model Company {
  id          Int          @id @default(autoincrement())
  name        String
  street      String
  city        String
  postalcode  String
  country     String
  settings    Json
  tokenusages TokenUsage[]
  users       User[]
  quotaId     Int?
  quota       Quota?       @relation(fields: [quotaId], references: [id])
}

model TokenUsage {
  id        Int      @id @default(autoincrement())
  month     Int
  year      Int
  amount    Int
  companyId Int
  Company   Company? @relation(fields: [companyId], references: [id])
}
